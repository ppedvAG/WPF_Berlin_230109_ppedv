<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="313">
    <StackPanel>
        <StackPanel Margin="5" x:Name="Spl_DataContextBsp">
            <StackPanel.DataContext>
                <local:Person Vorname="Anna" Nachname="Nass" Alter="35"/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Path=Vorname}"/>
            <TextBlock Text="{Binding Nachname}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[1].DayOfWeek}"/>

            <Button Content="Zeige Person" Click="Button_Click"/>
            <Button Content="Altern" x:Name="Btn_Altern" Click="Btn_Altern_Click"/>
        </StackPanel>


        <ListBox x:Name="Lbx_Personen" Height="100"
                 ItemsSource="{Binding Personenliste}"/>
        <Button Content="Neue Person" x:Name="Btn_New" Click="Btn_New_Click"/>
        <Button Content="Lösche Person" x:Name="Btn_Delete" Click="Btn_Delete_Click"/>

    </StackPanel>

</Window>
